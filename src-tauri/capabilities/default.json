{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-document-write",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-document-write-recursive",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    "store:default"
  ]
}